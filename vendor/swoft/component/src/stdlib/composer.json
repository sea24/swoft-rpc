{
  "name": "swoft/stdlib",
  "type": "library",
  "keywords": [
    "php",
    "swoole",
    "helper",
    "swoft"
  ],
  "description": "micro-service framework base on swoole",
  "license": "Apache-2.0",
  "require": {
    "php": ">7.1.0"
  },
  "autoload": {
    "psr-4": {
      "Swoft\\Stdlib\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "autoload-dev": {
    "psr-4": {
      "SwoftTest\\Stdlib\\Unit\\": "test/unit/",
      "SwoftTest\\Stdlib\\Testing\\": "test/testing/"
    }
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://packagist.laravel-china.org"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit -c phpunit.xml",
    "cs-fix": "./vendor/bin/php-cs-fixer fix $1"
  }
}
